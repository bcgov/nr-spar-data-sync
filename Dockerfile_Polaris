# pull official base image
FROM ghcr.io/oracle/oraclelinux:8

RUN dnf -y module disable python36 && \
    dnf -y module enable python39 && \
    dnf -y install python39 python39-pip python39-setuptools python39-wheel && \
    rm -rf /var/cache/dnf

# set work directory
WORKDIR /usr/src/app

# set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
ENV DPI_DEBUG_LEVEL 64
ENV ARCHFLAGS -arch x86_64

# install psycopg2 dependencies
#RUN apk update \
#    && apk add postgresql-dev gcc python3-dev

# install dependencies
#RUN compgen -A function -abck | sort | uniq
RUN pip3 install --upgrade pip
COPY ./requirements.txt .
RUN pip3 install -r requirements.txt

RUN echo $teste

# copy project
COPY . .
RUN python3 src/main.py $test_mode
